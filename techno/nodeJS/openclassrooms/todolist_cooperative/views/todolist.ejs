<!DOCTYPE html>
<html>
<head>
	<title>Task List</title>
	<link rel="stylesheet" href="css/main.css">
</head>
<body>
	<header>
		<div class="container">
			<h1>Ma TODO List</h1>
		</div>
	</header>
	
	<div class="container">
		
		<form action="/" method="post" id="add-task-form">
			<input type="text" placeholder="Ajouter une tÃ¢che" id="add-task-text"> </input>
			<button type="submit" id="add-task-button"> Ajouter </button>
		</form>

		<ul class="tasks-container">
			<% list.forEach(function(task, index){ %>
				<%if (task.done) { %>
					<li class="task-item task-done"> <a href="tasks/delete/<%= index %>" class="delete-task">X</a> <%= task.name %> </li>
				<% } else { %>
					<li class="task-item"> <a href="tasks/delete/<%= index %>" class="delete-task">X</a> <%= task.name %> </li>
				<% } %>

		    <%	}); %>
		</ul>
		
	</div>
	<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>	
	<script type="text/javascript" src="js/app.js">

	</script>
</body>
</html>